{
  "source": "./src/lib",
  "destination": "./build/docs",
  "index": "./README.md",
  "package": "./package.json",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "test": {
          "source": "./test/",
          "interfaces": ["describe", "it", "context", "suite", "test"],
          "includes": ["(spec|Spec|test|Test)\\.js$"],
          "excludes": ["\\.config\\.js$"]
        },
        "manual": {
          "index": "./manual/index.md",
          "asset": "./manual/asset",
          "files": [
            "./manual/installation.md",
            "./manual/overview.md",
            "./manual/tutorial.md"
          ]
        }
      }
    }
  ]
}
